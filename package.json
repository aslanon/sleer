{
	"name": "sleer",
	"version": "1.0.0",
	"description": "MacOS ekran, kamera ve ses kayıt uygulaması",
	"private": true,
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"postinstall": "nuxt prepare",
		"electron:dev": "concurrently -k \"BROWSER=none npm run dev\" \"wait-on --interval 1000 --timeout 60000 http-get://127.0.0.1:3000 && cross-env NODE_ENV=development electron electron/main.cjs\"",
		"electron:build": "nuxt generate && electron-builder"
	},
	"dependencies": {
		"@ffmpeg-installer/ffmpeg": "^1.1.0",
		"@nuxtjs/tailwindcss": "^6.10.1",
		"@vueuse/components": "^12.3.0",
		"@vueuse/core": "^12.3.0",
		"electron": "^33.3.1",
		"fluent-ffmpeg": "^2.1.3",
		"wait-on": "^7.2.0",
		"cursor-monitor": "file:native/cursor-monitor"
	},
	"devDependencies": {
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"electron-builder": "^25.1.8",
		"nuxt": "^3.9.1"
	},
	"resolutions": {
		"rollup": "4.6.1"
	},
	"build": {
		"appId": "com.sleer.app",
		"mac": {
			"category": "public.app-category.video",
			"target": [
				"dmg",
				"zip"
			],
			"arch": [
				"arm64"
			]
		},
		"files": [
			".output/public/**/*",
			"electron/**/*"
		]
	}
}
